
@{
                /**/

                ViewBag.Title = "Identify";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
</head>


<h2>Ferramentas</h2>
<div align="center">
    <p> Insira o seu login do site do Swgog.gg e clique em Carregar</p>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.TextBox("SwgohProfile", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "O Login é obrigatório!" })

        <input type="submit" value="Carregar" class="btn btn-default" />
    }
    </br>
    <p> O Usuário é a parte destacada em vermelho no exemplo abaixo. </p>
    <p> https://swgoh.gg/u/<font color="red">Usuario</font>/ </p>

</div>